<%= form_for [area, post] do |form| %>
  <%= render "error_messages", target: post %>

  <div>
    <%= form.text_field :title %>
    <%= form.label :title %>
  </div>

  <div>
    <%= form.text_area :body %>
    <%= form.label :body %>
  </div>

  <%= form.collection_select :category_id, Category.all, :id, :name, {:prompt => "Select Category"} %>

  <div>
    <h5>Add an Image to Your Post</h5>
    <%= form.label "Your Photo" %>
    <br>
    <%= form.text_field :image_url, id: "image-input" %>
  </form><br>

  <%= form.submit %>
<% end %>

<img id="image-preview" src="" />
